{
    "tabWidth": 4,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "proseWrap": "always",
    "importOrder": ["^@shared/(.*)$", "^@admin/(.*)$", "^@auth/(.*)$", "^@dashboard/(.*)$", "^[./]"],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
    "overrides": [
        {
            "files": [",*.ts", "*.tsx"],
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
